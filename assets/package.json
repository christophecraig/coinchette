{
    "name": "coinchette",
    "version": "0.1.0",
    "scripts": {
        "dev": "esbuild js/app.js --bundle --outdir=../priv/static/assets --watch",
        "build": "esbuild js/app.js --bundle --minify --outdir=../priv/static/assets",
        "deploy": "tailwindcss -i css/app.css -o ../priv/static/assets/app.css --minify && npm run build"
    },
    "dependencies": {
        "phoenix": "file:../deps/phoenix",
        "phoenix_html": "file:../deps/phoenix_html",
        "phoenix_live_view": "file:../deps/phoenix_live_view"
    },
    "devDependencies": {
        "esbuild": "^0.19.5",
        "@tailwindcss/cli": "^4.1.12",
        "tailwindcss": "^4.1.12",
        "daisyui": "^5.0.35"
    }
}
